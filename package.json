{
  "name": "flat-svg",
  "version": "0.0.2",
  "type": "module",
  "main": "./dist/cjs/main.js",
  "module": "./dist/esm/main.js",
  "types": "./dist/esm/main.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/main.js",
      "import": "./dist/esm/main.js"
    }
  },
  "files": [
    "dist/cjs",
    "dist/esm"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ESNext --outDir dist/esm",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**/*.ts"
      ],
      "extensions": [
        "ts"
      ],
      "ignore": [
        "node_modules"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/css": "^0.0.38",
    "@types/fontkit": "^2.0.7",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.8.5",
    "npm-watch": "^0.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@js-bits/dom-parser": "^1.0.3",
    "@pdf-lib/fontkit": "^1.1.1",
    "canvas": "^2.11.2",
    "change-case": "^5.4.4",
    "css": "^3.0.0",
    "css-expression": "^0.0.8",
    "fontkit": "^2.0.4",
    "gradient2svg": "^0.0.4",
    "inline-style-parser": "^0.2.4",
    "jsdom": "^25.0.1",
    "p-limit": "^6.1.0",
    "paper-jsdom": "^0.12.18",
    "path-intersection": "^3.1.0",
    "svg-path-commander": "^2.1.3",
    "transformation-matrix": "^2.16.1",
    "xml-formatter": "^3.6.3"
  }
}
